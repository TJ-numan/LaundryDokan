<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".SignupActivity">



    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="234dp"
        android:layout_height="224dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loginanimation"
        app:lottie_url="REPLACE_JSON_URL" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape2"
        app:layout_constraintTop_toBottomOf="@+id/animationView"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:src="@drawable/avatar" />

        <EditText
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textColor="#A97EDF"
            android:autofillHints="email here"
            android:hint="your full name here"
            android:background="@null"
            android:inputType="textPersonName"
            android:paddingLeft="8dp"
            android:paddingRight="9dp"
            tools:ignore="LabelFor" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/shape2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:src="@drawable/phone" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="your phone number here"
            android:background="@null"
            android:textColor="#A97EDF"
            android:inputType="phone"
            android:paddingLeft="8dp"
            android:paddingRight="9dp"
            tools:ignore="LabelFor" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/shape2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:src="@drawable/lock" />


        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:autofillHints="email here"
            android:background="@null"
            android:hint="your password here"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:textColor="#A97EDF"
            android:paddingRight="9dp"
            tools:ignore="LabelFor" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/shape2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:src="@drawable/lock" />


        <EditText
            android:id="@+id/retypepassword"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:autofillHints="email here"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="retype the same password here"
            android:paddingLeft="8dp"
            android:textColor="#A97EDF"
            android:paddingRight="9dp"
            tools:ignore="LabelFor" />



    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signupbtn"
        android:layout_width="168dp"
        android:layout_height="42dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/buttonbaground2"
        android:text="Signup"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/progresslogin"
        android:layout_width="match_parent"
        android:layout_height="314dp"
        android:layout_marginTop="220dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:visibility="gone"
        app:lottie_rawRes="@raw/progressbar"
        />



</androidx.constraintlayout.widget.ConstraintLayout>